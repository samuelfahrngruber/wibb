<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="?attr/cornerRadius">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <FrameLayout
                android:id="@+id/fav_card_item_img_container"
                android:layout_width="65dp"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/fav_card_item_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_beer_24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/content_desc_brand_icon">

            </ImageView>
        </FrameLayout>

        <ImageView
                android:id="@+id/fav_card_gradient"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_desc_gradient" />

        <TextView
                android:id="@+id/fav_item_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:scaleType="fitCenter"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/placeholder_name"
                android:textSize="25sp"
                android:fontFamily="sans-serif-light"
                android:layout_weight="1" />

        <CheckBox
                android:id="@+id/fav_card_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                style="?android:attr/starStyle"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_weight="0">

        </CheckBox>

    </LinearLayout>


</androidx.cardview.widget.CardView>