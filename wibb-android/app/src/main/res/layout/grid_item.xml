<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id_cardView_gridItem"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        cardview:cardCornerRadius="?attr/cornerRadius">

    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <ImageView
                android:id="@+id/grid_item_img_id"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:contentDescription="@string/content_desc_brand_icon" />

        <TextView
                android:id="@+id/grid_item_text_id"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/placeholder_grid_item" />

    </LinearLayout>

</androidx.cardview.widget.CardView>